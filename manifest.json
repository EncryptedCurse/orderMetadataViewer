{
	"manifest_version": 3,
	"version": "2.2.4",
	"name": "orderMetadataViewer",
	"description": "Display hidden Target and Best Buy order metadata",
	"author": "EncryptedCurse",
	"action": {
		"default_popup": "popup/popup.html"
	},
	"options_ui": {
		"page": "options/options.html",
		"open_in_tab": false
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"permissions": ["storage", "declarativeContent"],
	"host_permissions": ["*://*.target.com/", "*://*.bestbuy.com/"],
	"icons": {
		"128": "icon/icon_128.png",
		"512": "icon/icon_512.png"
	}
}
